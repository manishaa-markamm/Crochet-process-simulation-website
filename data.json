    "name": "Classic Amigurumi Bear",
    "image": "teddy.jpg",
    "difficulty": "Intermediate",
    "category": "Toys",
    "details": {
      "time": "4-5 Hours",
      "materials": ["Brown Cotton Yarn (DK Weight)", "Polyester Stuffing", "Safety Eyes (10mm)", "Black Embroidery Thread"],
      "tools": ["3.5mm Crochet Hook", "Yarn Needle", "Stitch Markers", "Scissors"],
      "techniques": ["Magic Ring (MR)", "Single Crochet (sc)", "Increase (inc)", "Invisible Decrease (dec)"]
    },
    "steps": [
      {"text": "Create a Magic Ring.", "detail": "Wrap yarn around finger, pull up a loop, chain 1 to secure.", "media": "assets/magic-ring.gif"},
      {"text": "Round 1: 6 SC into Magic Ring.", "detail": "Work 6 single crochets into the center. Pull tail tight.", "media": "assets/sc.gif"},
      {"text": "Round 2: Increase in every stitch.", "detail": "2 SC in each stitch around. Total: 12 stitches.", "media": "assets/inc.gif"},
      {"text": "Round 3: (1 SC, Inc) repeat around.", "detail": "SC in first stitch, 2 SC in next. Repeat 6 times. Total: 18.", "media": "assets/inc.gif"},
      {"text": "Round 4: (2 SC, Inc) repeat around.", "detail": "SC in next 2 stitches, 2 SC in next. Repeat 6 times. Total: 24.", "media": "assets/sc.gif"},
      {"text": "Round 5: (3 SC, Inc) repeat around.", "detail": "SC in next 3 stitches, 2 SC in next. Repeat 6 times. Total: 30.", "media": "assets/sc.gif"},
      {"text": "Rounds 6-12: SC in each stitch.", "detail": "Work even rows to build the height of the head. 30 stitches per row.", "media": "assets/sc.gif"},
      {"text": "Insert Safety Eyes.", "detail": "Place eyes between Round 9 and 10, about 5 stitches apart.", "media": "assets/eyes.jpg"},
      {"text": "Round 13: (3 SC, Dec) repeat around.", "detail": "Start closing the head. SC 3, then invisible decrease. Total: 24.", "media": "assets/dec.gif"},
      {"text": "Round 14: (2 SC, Dec) repeat around.", "detail": "SC 2, decrease. Total: 18.", "media": "assets/dec.gif"},
      {"text": "Stuff the Head firmly.", "detail": "Add stuffing now before the hole gets too small.", "media": "assets/stuffing.jpg"},
      {"text": "Round 15: (1 SC, Dec) repeat around.", "detail": "SC 1, decrease. Total: 12.", "media": "assets/dec.gif"},
      {"text": "Round 16: Decrease around.", "detail": "Decrease 6 times. Total: 6 stitches.", "media": "assets/dec.gif"},
      {"text": "Fasten off and weave in end.", "detail": "Cut yarn, use needle to close the remaining hole.", "media": "assets/finish.gif"},
      {"text": "Make Body (Start Magic Ring).", "detail": "Repeat Rounds 1-4 of head to start body.", "media": "assets/magic-ring.gif"},
      {"text": "Sew Head to Body.", "detail": "Use yarn needle to stitch the head securely to the body.", "media": "assets/sew.gif"}
    ]
